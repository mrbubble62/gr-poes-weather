<?xml version="1.0"?>
<block>
<!-- NOAA HRPT Enhanced Deframer 2 -->
  <name>asdfasdfasdf</name>
  <key>poesweather_noaa_hrpt_deframer2</key>
  <category>POES-Weather</category>
  <import>import poesweather</import>
  <make>poesweather.noaa_hrpt_deframer2($idle_after_n_sync_not_found)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Idle after N of frames lost</name>
    <key>idle_after_n_sync_not_found</key>    
    <type>int</type>
    <value>5</value>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>byte</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>short</type>
  </source>

  <doc>
NOAA POES HRPT Enhanced Deframer 2 block.

This block is still work in progress!
Validate every frame sync. If N bad frames found it will enter idle and wait for a valid sync.
  </doc>

</block>
